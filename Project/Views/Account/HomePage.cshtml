    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        // JavaScript to handle category filtering
            // Get all category links
            const categoryLinks = document.querySelectorAll('a[data-category]');
            const eventCards = document.querySelectorAll('.event-card');

            // Attach click event to each category link
            categoryLinks.forEach(link => {
                link.addEventListener('click', function(event) {
                    event.preventDefault();

                    const selectedCategory = event.target.getAttribute('data-category');

                    // Filter event cards based on selected category
                    eventCards.forEach(card => {
                        const cardCategory = card.getAttribute('data-category');
                        console.log(selectedCategory === "All" || selectedCategory === cardCategory)
                        if (selectedCategory === "All" || selectedCategory === cardCategory) {
                            card.style.display = "block";  // Show matching cards
                        } else {
                            card.style.display = "none";  // Hide non-matching cards
                        }
                    });
                });
            });

            AOS.init();
    </script>

 
